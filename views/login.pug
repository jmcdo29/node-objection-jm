extends layout
block content
  h2 Welcome to the Log In Page
  if err 
    .error 
      =err
  if message
    .message
      =message
  form(action="/users/login", method="post")
    label(for="email") Email
    input(type="email", name="email")
    br
    label(for="password") Password
    input(type="password", name="password")
    br
    button(type="submit") Log In